@model List<Buses.Entities.Agencia>

@{
    ViewData["Title"] = "Listado Agencia";
}
<div class="container mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <label>Nombre</label>
                </th>
                <th>
                    <label>Codigo Postal</label>
                </th>
                <th>
                    <label>Telefono</label>
                </th>
                <th>
                    <label>Correo</label>
                </th>
                <th>
                    <label>Estado</label>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var agencia in Model)
            {
                <tr>
                    <td>
                        @agencia.NombreAgencia
                    </td>
                    <td>
                        @agencia.Cpostal
                    </td>
                    <td>
                        @agencia.Telefono
                    </td>
                    <td>
                        @agencia.Correo
                    </td>
                    <td>
                        @agencia.EstadoAgencia
                    </td>
                    <td>
                </tr>
            }
        </tbody>
    </table>
    <div class="float-right">

    <a class="btn btn-danger" asp-action="Index" asp-controller="PaginaPrincipal">Ir al Menu Principal</a>
    </div>
</div>
