<div class="imagenesfondo">
    <br />
    <br />
    <div class="mt-4 text-center">
        <h3>¡Elige tu destino y <strong>Viaja</strong>!</h3>
        <h4><strong>Casmart</strong> la manera más fácil de comprar pasajes de bus</h4>
    </div>
    <br />
    <br />
    <form asp-action="Index" asp-controller="Pasaje" method="post" class="container" onsubmit="return validacion()">
        <div class="row">
            <div class="col-3">
                <select class="form-control redondeadonorelieve" name="Origen" id="cboRutaOrigen" required>
                    <option value="0" class="font-weight-bold">- Origen -</option>
                    @foreach (var item in Model.Agencias)
                    {
                        <option value="@item.NombreAgencia">@item.NombreAgencia</option>
                    }
                </select>
            </div>
            <div class="col-3">
                <select class="form-control redondeadonorelieve" name="Destino" id="cboRutaDestino" required>
                    <option value="0" class="font-weight-bold">- Destino -</option>
                    @foreach (var item in Model.Agencias)
                    {
                        <option value="@item.NombreAgencia">@item.NombreAgencia</option>
                    }
                </select>
            </div>
            <div class="col-3">
                <div class="form-group row">
                    <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                        <input type="text" class="form-control datetimepicker-input redondeadonorelieve" name="FechaViaje" id="FechaViaje" data-target="#datetimepicker1" />
                        <div class="input-group-append redondeadonorelieve" data-target="#datetimepicker1" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-danger text-white font-weight-bold form-control">Buscar</button>
            </div>
            <div class="col-1"></div>
        </div>
    </form>
    <br />
    <br />
    <br />
</div>