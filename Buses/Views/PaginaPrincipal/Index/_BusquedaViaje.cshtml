@model List<Buses.Entities.Agencia>
<div class="imagenesfondo">
    <br />
    <br />
    <div class="mt-4 text-center">
        <h3>¡Llegaron los días Cyber WOW!</h3>
        <h4>redBus la manera más fácil de comprar pasajes de bus</h4>
    </div>
    <br />
    <br />
    <form asp-action="Index" asp-controller="Pasaje">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-2">
                <select class="form-control redondeadonorelieve">
                    <option value="volvo" class="font-weight-bold">- Origen -</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Cpostal">@item.NombreAgencia</option>
                    }
                </select>
            </div>
            <div class="col-2">
                <select class="form-control redondeadonorelieve">
                    <option value="volvo" class="font-weight-bold">- Destino -</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Cpostal">@item.NombreAgencia</option>
                    }
                </select>
            </div>
            <div class="col-2">
                <div class="form-group row">
                    <div class="col-12">
                        <input class="form-control redondeadonorelieve" type="date" id="dtpInicio">
                    </div>
                </div>
            </div>
            <div class="col-2">
                <a class="btn colorPagina text-white font-weight-bold form-control" id="regis">Buscar</a>
            </div>
            <div class="col-1"></div>
        </div>
    </form>
    <br />
    <br />
    <br />
</div>
