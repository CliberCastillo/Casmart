@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="container">
    <div class="row mt-5">
        <div class="col-4">
            <section>
                <form method="post">
                    <h4>Use una cuenta local para iniciar sesión.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="font-weight-bold">Correo</label>
                        <input asp-for="Input.Email" id="correo" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Contraseña</label>
                        <input asp-for="Input.Password" id="contraseña" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox form-check">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />

                                Recuérdame
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-danger mr-1 my-2 my-sm-0 font-weight-bold">Iniciar Sesion</button>
                        <button type="submit" class="btn btn-outline-danger mr-1 my-2 my-sm-0 font-weight-bold">Salir</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                Registrar como usuario nuevo
                            </a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}